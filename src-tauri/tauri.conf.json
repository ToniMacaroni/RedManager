{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "RedModManager",
    "version": "1.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": true,
        "scope": [
          {
            "name": "dotnet-template-check",
            "cmd": "dotnet",
            "args": ["new", { "validator": "\\S+" }, "-h"]
          },
          {
            "name": "dotnet-install-template",
            "cmd": "dotnet",
            "args": ["new", "install", "RedLoader.Templates"]
          },
          {
            "name": "dotnet-create-project",
            "cmd": "dotnet",
            "args": true
          },
          {
            "name": "open-explorer",
            "cmd": "explorer",
            "args": [{ "validator": ".*" }]
          }
        ]
      },
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "dialog": {
        "all": true
      },
      "path": {
        "all": true
      },
      "http": {
        "all": true,
        "scope": ["https://github.com/*"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tonimacaroni.redmodmanager",
      "icon": [
        "icons/logo_img.png",
        "icons/logo_icon.ico"
      ]
    },
    "security": {
      "csp": ""
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "RedModManager",
        "width": 800,
        "height": 600
      }
    ]
  }
}
